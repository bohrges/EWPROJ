extends layout

block content
  header.w3-container
    h1= titulo

  main.w3-container
    table.w3-table.w3-striped.w3-bordered
      thead
        tr
          th ID
          th Description Level
          th Entity Type
          th Title
          th Initial Date
          th Final Date
          th Author
      tbody
        each record in generes
          tr
            td
              a(href=`/${record._id}`) #{record._id}
            td #{record.DescriptionLevel}
            td #{record.EntityType}
            td #{record.UnitTitle}
            td #{record.UnitDateInitial}
            td #{record.UnitDateFinal}
            td #{record.Author}

    div.navigation
      p Page #{page + 1} of #{totalPages}
      if page > 0
        a.w3-button.w3-margin-right(href=`/?page=${page-1}`) Previous
      if page < totalPages - 1
        a.w3-button(href=`/?page=${page+1}`) Next

  footer.w3-container.w3-green
    address Generated by Grupo12::EngWeb2024 on #{data}
